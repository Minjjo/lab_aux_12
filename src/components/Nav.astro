}

.logos-container {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    margin-left: 30px; 
}

.logo {
    display: flex;
    align-items: center;
    margin-right: 20px;
}

.logo-image {
    width: 100px; 
    height: auto; 
}

.text-container {
    display: flex;
    flex-direction: column;
    margin-left: 10px;
    font-weight: bold;
}

.text-container p {
    margin: 0; 
}

.nav2 {
    padding: 10px;
    color: #0F195A;
    display: flex;
    justify-content: space-between; 
    align-items: center; 
}

.nav2-logos-container {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
}

.nav2-logo {
    padding: 10px;
    color: #0F195A;
    margin-right: 20px; 
}

.nav2-logo6 {
    display: flex;
    align-items: center;
    margin-right: 70px; 
    width: 15%;
    font-size: 25px;
}

.container {
    display: flex;
    justify-content: space-between;
    align-items: center; 
}

.search {
    display: flex;
    align-items: center;
    position: relative;
}

.search input {
    padding: 8px 30px 8px 8px; 
    border-radius: 20px; 
    border: 1px solid #ccc;
}

.search-icon {
    position: absolute;
    right: 10px;
    width: 20px; 
    height: auto;
    cursor: pointer;
}

@media (max-width: 768px) {
    .nav2 {
        flex-direction: column;
    }

    .menu-button {
        display: block;
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        color: #0F195A;
        font-weight: bold;
    }

    .nav2-logos-container {
        display: none;
        flex-direction: column;
        width: 100%;
    }

    .nav2-logos-container.show {
        display: flex;
    }

    .nav2-logos-container li {
        margin: 10px 0;
    }

    .search {
        width: 100%;
        margin-top: 10px;
    }

    .menu-button:checked + .nav2-logos-container {
        display: flex;
    }
}

@media (min-width: 769px) {
    .menu-button {
        display: none;
    }

    .nav2 {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav2-logos-container {
        display: flex;
    }

    .search {
        margin-left: auto;
    }
}


</style>